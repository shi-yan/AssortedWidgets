#[cfg(target_os = "macos")]
fn run_triangle_demo(mut event_loop: GuiEventLoop) {
    use assorted_widgets::render::WindowRenderer;

    // Create triangle render pipeline
    let pipeline = create_triangle_pipeline(event_loop.render_context());

    // Get renderer (we know it exists since we created a window)
    let renderer_ptr = event_loop.renderer_mut().unwrap() as *mut WindowRenderer;

    // Set up rendering callback
    // Note: This is a simplified approach for the demo
    // In production, we'd use proper callback management
    unsafe {
        let window = event_loop.window_mut().unwrap();
        let ctx = event_loop.render_context();
        let device = ctx.device.clone();
        let queue = ctx.queue.clone();
        let pipeline_clone = pipeline.clone();

        use assorted_widgets::platform::WindowCallbacks;

        // Get existing callbacks and update request_frame
        let mut callbacks = WindowCallbacks::default();

        callbacks.input = Some(Box::new(|input| {
            use assorted_widgets::platform::PlatformInput;
            match input {
                PlatformInput::MouseDown { position, button, .. } => {
                    println!("Mouse {:?} clicked at ({:.1}, {:.1})", button, position.x, position.y);
                }
                PlatformInput::KeyDown { key, .. } => {
                    println!("Key pressed: {}", key);
                }
                _ => {}
            }
        }));

        callbacks.request_frame = Some(Box::new(move || {
            // Render the triangle!
            let renderer = &*renderer_ptr;
            render_triangle(renderer, &device, &queue, &pipeline_clone);
        }));

        window.set_callbacks(callbacks);

        // Trigger initial render
        window.invalidate();
    }

    println!("Starting event loop...");

    // Run event loop (never returns)
    event_loop.run();
}

#[cfg(target_os = "macos")]
fn create_triangle_pipeline(ctx: &assorted_widgets::render::RenderContext) -> std::sync::Arc<wgpu::RenderPipeline> {
    let shader = ctx.device.create_shader_module(wgpu::ShaderModuleDescriptor {
        label: Some("Triangle Shader"),
        source: wgpu::ShaderSource::Wgsl(include_str!("../shaders/triangle.wgsl").into()),
    });

    let pipeline_layout = ctx.device.create_pipeline_layout(&wgpu::PipelineLayoutDescriptor {
        label: Some("Triangle Pipeline Layout"),
        bind_group_layouts: &[],
        push_constant_ranges: &[],
    });

    let surface_format = wgpu::TextureFormat::Bgra8UnormSrgb; // Common macOS format

    let pipeline = ctx.device.create_render_pipeline(&wgpu::RenderPipelineDescriptor {
        label: Some("Triangle Pipeline"),
        layout: Some(&pipeline_layout),
        vertex: wgpu::VertexState {
            module: &shader,
            entry_point: Some("vs_main"),
            buffers: &[],
            compilation_options: Default::default(),
        },
        fragment: Some(wgpu::FragmentState {
            module: &shader,
            entry_point: Some("fs_main"),
            targets: &[Some(wgpu::ColorTargetState {
                format: surface_format,
                blend: Some(wgpu::BlendState::REPLACE),
                write_mask: wgpu::ColorWrites::ALL,
            })],
            compilation_options: Default::default(),
        }),
        primitive: wgpu::PrimitiveState {
            topology: wgpu::PrimitiveTopology::TriangleList,
            ..Default::default()
        },
        depth_stencil: None,
        multisample: wgpu::MultisampleState::default(),
        multiview: None,
        cache: None,
    });

    std::sync::Arc::new(pipeline)
}

#[cfg(target_os = "macos")]
fn render_triangle(
    renderer: &assorted_widgets::render::WindowRenderer,
    device: &wgpu::Device,
    queue: &wgpu::Queue,
    pipeline: &wgpu::RenderPipeline,
) {
    // Get surface texture
    let surface_texture = match renderer.get_current_texture() {
        Ok(texture) => texture,
        Err(e) => {
            eprintln!("Failed to get surface texture: {:?}", e);
            return;
        }
    };

    // Create texture view
    let view = surface_texture.texture.create_view(&wgpu::TextureViewDescriptor {
        format: Some(renderer.format.add_srgb_suffix()),
        ..Default::default()
    });

    // Create command encoder
    let mut encoder = device.create_command_encoder(&wgpu::CommandEncoderDescriptor {
        label: Some("Triangle Encoder"),
    });

    // Render pass
    {
        let mut render_pass = encoder.begin_render_pass(&wgpu::RenderPassDescriptor {
            label: Some("Triangle Render Pass"),
            color_attachments: &[Some(wgpu::RenderPassColorAttachment {
                view: &view,
                resolve_target: None,
                ops: wgpu::Operations {
                    load: wgpu::LoadOp::Clear(wgpu::Color {
                        r: 0.1,
                        g: 0.2,
                        b: 0.3,
                        a: 1.0,
                    }),
                    store: wgpu::StoreOp::Store,
                },
            })],
            depth_stencil_attachment: None,
            timestamp_writes: None,
            occlusion_query_set: None,
        });

        render_pass.set_pipeline(pipeline);
        render_pass.draw(0..3, 0..1); // Draw 3 vertices (triangle)
    }

    // Submit commands
    queue.submit([encoder.finish()]);

    // Present frame
    surface_texture.present();

    // Request next frame (immediate mode rendering)
    // This will trigger another request_frame callback
}
